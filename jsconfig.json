{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noImplicitReturns": false,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": false
    },
    "include": ["**/*.js", "**/*.d.ts"],
    "exclude": ["node_modules", "*.bck.*"]
}
